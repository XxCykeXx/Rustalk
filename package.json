{
  "name": "rustalk",
  "version": "0.0.0",
  "description": "Secure P2P terminal chat application with end-to-end encryption (includes rustalk and rus binaries)",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "rustalk": "./bin/rustalk.js",
    "rus": "./target/release/rus"
  },
  "files": [
    "bin/rustalk.js",
    "target/release/rustalk_cli*",
    "target/release/rus*",
    "src/",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:ts && npm run build:rust",
    "build:ts": "bun build bin/rustalk.ts --outdir bin --target node",
    "build:rust": "cargo build --release --workspace",
    "dev": "bun run --watch src/index.ts",
    "start": "node bin/rustalk.js",
    "cli": "bun run src/index.ts",
    "test": "bun test tests/**/*.test.ts",
    "test:rust": "cargo test --workspace",
    "clean": "rm -rf target/ dist/ bin/*.js",
    "prepublishOnly": "npm run build",
    "postinstall": "npm run build:rust"
  },
  "keywords": [
    "p2p",
    "chat",
    "encrypted",
    "terminal",
    "rust",
    "secure",
    "messaging",
    "rus",
    "cli"
  ],
  "author": "Rustalk Team",
  "license": "MIT",
  "dependencies": {
    "@napi-rs/cli": "^2.18.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/bun": "latest",
    "@types/inquirer": "^9.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/muhammad-fiaz/Rustalk"
  },
  "homepage": "https://github.com/muhammad-fiaz/Rustalk",
  "bugs": {
    "url": "https://github.com/muhammad-fiaz/Rustalk/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}
